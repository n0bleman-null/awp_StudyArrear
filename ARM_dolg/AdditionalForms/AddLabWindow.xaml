<Window x:Class="ARM_dolg.AdditionalForms.AddLabWindow"
        Icon="D:\ARM_dolg\ARM_dolg\icon.ico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARM_dolg.AdditionalForms"
        mc:Ignorable="d"
        MinHeight="110"
        Title="Добавить практическую работу" Height="110" Width="820">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Text="Практическая работа:" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="123"/>
        <ComboBox Name="Lab" HorizontalAlignment="Left" Margin="138,7,0,0" VerticalAlignment="Top" Width="652" DropDownOpened="Lab_DropDownOpened"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,39,0,0" Text="Дата работы:" TextWrapping="Wrap" VerticalAlignment="Top" Width="123"/>
        <DatePicker Name="LabData" HorizontalAlignment="Left" Margin="138,39,0,0" VerticalAlignment="Top" IsTodayHighlighted="True"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="267,39,0,0" VerticalAlignment="Top" Width="116" RenderTransformOrigin="0.443,1.186" Click="Button_Click"/>

    </Grid>
</Window>
